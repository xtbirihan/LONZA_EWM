<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"                                                                                                                                            
	xmlns:f="sap.ui.layout.form" xmlns:table="sap.ui.table">                                                                                                                                                                                                      
	<VBox height="23rem">                                                                                                                                                                                                                                         
		<VBox height="80%">                                                                                                                                                                                                                                          
				<table:Table cellClick="onCellClick" id="huTable" selectionBehavior="RowOnly" rowActionCount="1" rowSelectionChange="onHuSelect" visibleRowCountMode="Auto"                                                                                                
					selectionMode="Single" rows="{scannedHU>/results}"  enableColumnReordering="false" width="auto" enableCellFilter="true" sort="sortTable">                                                                                                                 
					<table:columns >                                                                                                                                                                                                                                          
						<table:Column sortProperty="HuNum">                                                                                                                                                                                                                      
							<Label text="{i18n>HU}" class="customTableHeaderSmall"/>                                                                                                                                                                                                
							<table:template>                                                                                                                                                                                                                                        
								<Text text="{scannedHU>Huident}" wrapping="false" class="customTableRowSmall"/>                                                                                                                                                                        
							</table:template>                                                                                                                                                                                                                                       
						</table:Column>                                                                                                                                                                                                                                          
						<table:Column sortProperty="Position" id="col1">                                                                                                                                                                                                         
							<Label text="{i18n>Qty}" class="customTableHeaderSmall"/>                                                                                                                                                                                               
							<table:template>                                                                                                                                                                                                                                        
								<Text text="{scannedHU>NavToHUItemQuantity/Quan}" wrapping="false" class="customTableRowSmall"/>                                                                                                                                                       
							</table:template>                                                                                                                                                                                                                                       
						</table:Column>                                                                                                                                                                                                                                          
						<table:Column sortProperty="Position" id="col3">                                                                                                                                                                                                         
							<Label text="{i18n>Unit}" class="customTableHeaderSmall"/>                                                                                                                                                                                              
							<table:template>                                                                                                                                                                                                                                        
								<Text text="{scannedHU>NavToHUItemQuantity/Meins}" wrapping="false" class="customTableRowSmall"/>                                                                                                                                                      
							</table:template>                                                                                                                                                                                                                                       
						</table:Column>                                                                                                                                                                                                                                          
					</table:columns>                                                                                                                                                                                                                                          
				</table:Table>                                                                                                                                                                                                                                             
		</VBox>                                                                                                                                                                                                                                                      
		<VBox height="20%">                                                                                                                                                                                                                                          
			<FlexBox justifyContent="SpaceBetween" alignItems="Center">                                                                                                                                                                                                 
				<items>                                                                                                                                                                                                                                                    
					<Text text="{i18n>Form_ScanHU}" wrapping="false" class="customTextSmall sapUiTinyMarginTop"/>                                                                                                                                                             
					<Input value="" id="scanInput" submit="onScanHuSubmit" class="customInput"/>                                                                                                                                                                              
				</items>                                                                                                                                                                                                                                                   
			</FlexBox>                                                                                                                                                                                                                                                  
		</VBox>                                                                                                                                                                                                                                                      
	</VBox>                                                                                                                                                                                                                                                       
</core:FragmentDefinition>                                                                                                                                                                                                                                     