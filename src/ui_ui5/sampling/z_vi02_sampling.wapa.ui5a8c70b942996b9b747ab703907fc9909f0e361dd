sap.ui.define([], function () {                                                                                                                                                                                                                                
	"use strict";                                                                                                                                                                                                                                                 
	return {                                                                                                                                                                                                                                                      
                                                                                                                                                                                                                                                               
		enabledInputFormatter: function (value) {                                                                                                                                                                                                                    
			return !!value;                                                                                                                                                                                                                                             
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		checkIfProvided: function (value) {                                                                                                                                                                                                                          
			return value ? value : "-";                                                                                                                                                                                                                                 
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		checkIfSrcHuProvided: function (value1, value2) {                                                                                                                                                                                                            
			return value1 || value2 ? `${value1} / ${value2}` : "-";                                                                                                                                                                                                    
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		checkIfHndlTypeProvided: function (value1, value2) {                                                                                                                                                                                                         
			return value1 ? `${value1} - ${value2}` : "-";                                                                                                                                                                                                              
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		longTextFormatter: function (value) {                                                                                                                                                                                                                        
			if (!value) {                                                                                                                                                                                                                                               
				return '';                                                                                                                                                                                                                                                 
			}                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
			if (value.length <= 45) {                                                                                                                                                                                                                                   
				return value                                                                                                                                                                                                                                               
			} else {                                                                                                                                                                                                                                                    
				value = value.substring(0, 43);                                                                                                                                                                                                                            
				return value + '...';                                                                                                                                                                                                                                      
			}                                                                                                                                                                                                                                                           
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		handlingIndicatorFormatter: function (value) {                                                                                                                                                                                                               
			switch (value) {                                                                                                                                                                                                                                            
				case "0":                                                                                                                                                                                                                                                  
					return "000 - TBD";                                                                                                                                                                                                                                       
				case "1":                                                                                                                                                                                                                                                  
					return "001 - TBD";                                                                                                                                                                                                                                       
				case "2":                                                                                                                                                                                                                                                  
					return "002 - Sensitive Product";                                                                                                                                                                                                                         
				case "3":                                                                                                                                                                                                                                                  
					return "003 - TBD";                                                                                                                                                                                                                                       
				default:                                                                                                                                                                                                                                                   
					return " ";                                                                                                                                                                                                                                               
			}                                                                                                                                                                                                                                                           
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		showCheckText: function (value) {                                                                                                                                                                                                                            
			if (!value) {                                                                                                                                                                                                                                               
				return ' ';                                                                                                                                                                                                                                                
			}                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
			if (value <= '1') {                                                                                                                                                                                                                                         
				return ' ';                                                                                                                                                                                                                                                
			} else {                                                                                                                                                                                                                                                    
				return 'Check line item number';                                                                                                                                                                                                                           
			}                                                                                                                                                                                                                                                           
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		setHighlight: function (value) {                                                                                                                                                                                                                             
			if (!value) {                                                                                                                                                                                                                                               
				return 'None';                                                                                                                                                                                                                                             
			}                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
			if (value == '2') {                                                                                                                                                                                                                                         
				return 'Error'                                                                                                                                                                                                                                             
			} else if (value == '3') {                                                                                                                                                                                                                                  
				return 'Success';                                                                                                                                                                                                                                          
			}                                                                                                                                                                                                                                                           
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		setResult: function (value) {                                                                                                                                                                                                                                
			if (!value) {                                                                                                                                                                                                                                               
				return '';                                                                                                                                                                                                                                                 
			}                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
			if (value == '2') {                                                                                                                                                                                                                                         
				return 'Fail'                                                                                                                                                                                                                                              
			} else if (value == '3') {                                                                                                                                                                                                                                  
				return 'Ok';                                                                                                                                                                                                                                               
			}                                                                                                                                                                                                                                                           
		},                                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
		getIfWorkcenterComboBoxEnabled: function (value) {                                                                                                                                                                                                           
			return value ? true : false;                                                                                                                                                                                                                                
		}                                                                                                                                                                                                                                                            
	};                                                                                                                                                                                                                                                            
});                                                                                                                                                                                                                                                            