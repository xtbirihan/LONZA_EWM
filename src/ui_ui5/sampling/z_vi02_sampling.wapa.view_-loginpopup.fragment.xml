<core:FragmentDefinition                                                                                                                                                                                                                                       
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:core="sap.ui.core">                                                                                                                                                                                                                                  
    <Dialog afterClose="loginAfterClose" id="loginDialog" title="Login">                                                                                                                                                                                       
        <content>                                                                                                                                                                                                                                              
            <VBox class="sapUiSmallMarginBottom sapUiSmallMarginTop" justifyContent="Center">                                                                                                                                                                  
                <VBox alignItems="Center">                                                                                                                                                                                                                     
                    <Label text="{i18n>LoginPopup.Lgnum}" labelFor="lgnumComboBox" />                                                                                                                                                                          
                    <ComboBox                                                                                                                                                                                                                                  
                        id="lgnumComboBox"                                                                                                                                                                                                                     
                        items="{                                                                                                                                                                                                                               
                            path: 'loginModel>/lgnums'                                                                                                                                                                                                         
                        }"                                                                                                                                                                                                                                     
                        selectedKey="{loginModel>/selectedLgnum}"                                                                                                                                                                                              
                        change="handleLgnumChange">                                                                                                                                                                                                            
                        <core:Item key="{loginModel>Lgnum}" text="{loginModel>Lgnum}: {loginModel>Lnumt}"/>                                                                                                                                                    
                    </ComboBox>                                                                                                                                                                                                                                
                </VBox>                                                                                                                                                                                                                                        
                <VBox class="sapUiLargeMarginTop" alignItems="Center">                                                                                                                                                                                         
                    <Label text="{i18n>LoginPopup.WC}" labelFor="workcenterComboBox" />                                                                                                                                                                        
                    <ComboBox                                                                                                                                                                                                                                  
                        id="workcenterComboBox"                                                                                                                                                                                                                
                        enabled="{&nbsp;&nbsp;                                                                                                                                                                                                                 
                                path: 'loginModel>/selectedLgnum',                                                                                                                                                                                             
								formatter: '.formatter.getIfWorkcenterComboBoxEnabled'                                                                                                                                                                                                 
							    }"                                                                                                                                                                                                                                                  
                        items="{                                                                                                                                                                                                                               
                            path: 'loginModel>/wcs'                                                                                                                                                                                                            
                        }"                                                                                                                                                                                                                                     
                        change="handleWCChange">                                                                                                                                                                                                               
                        <core:Item key="{loginModel>Workstation}" text="{loginModel>Workstation}: {loginModel>Description}"/>                                                                                                                                  
                    </ComboBox>                                                                                                                                                                                                                                
                </VBox>                                                                                                                                                                                                                                        
            </VBox>                                                                                                                                                                                                                                            
        </content>                                                                                                                                                                                                                                             
        <beginButton>                                                                                                                                                                                                                                          
            <Button id="btnLogin" text="{i18n>LoginPopup.Login}" class="sapUiSmallMarginBeginEnd" press="onLoginPressed"/>                                                                                                                                     
        </beginButton>                                                                                                                                                                                                                                         
    </Dialog>                                                                                                                                                                                                                                                  
</core:FragmentDefinition>                                                                                                                                                                                                                                     