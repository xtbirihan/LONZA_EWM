<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"                                                                                                                                            
	xmlns:f="sap.ui.layout.form">                                                                                                                                                                                                                                 
	<VBox height="23rem">                                                                                                                                                                                                                                         
		<VBox height="100%">                                                                                                                                                                                                                                         
			<FlexBox class="sapUiMediumMarginBottom" justifyContent="SpaceBetween">                                                                                                                                                                                     
				<items>                                                                                                                                                                                                                                                    
					<Text text="{i18n>ProdQty}" class="customTextSmall"/>                                                                                                                                                                                                     
					<Text text="{selectedRow>/NavToHUItemQuantity/Quan} {selectedRow>/NavToHUItemQuantity/Meins}" class="customTextSmall"/>                                                                                                                                   
				</items>                                                                                                                                                                                                                                                   
			</FlexBox>                                                                                                                                                                                                                                                  
			<FlexBox justifyContent="SpaceBetween">                                                                                                                                                                                                                     
				<Text text="{i18n>QtyToRemove}" class="customTextSmall"/>                                                                                                                                                                                                  
			</FlexBox>                                                                                                                                                                                                                                                  
			<FlexBox class="sapUiLargeMarginBottom" justifyContent="Start">                                                                                                                                                                                             
				<items>                                                                                                                                                                                                                                                    
					<Input type="Number" enabled="false" value="" liveChange="handleQtyToRemoveChange" id="inputQtyToRemove" class="qtyToRemoveInput"/>                                                                                                                       
					<ComboBox                                                                                                                                                                                                                                                 
						id="inputUoMToRemove"                                                                                                                                                                                                                                    
						enabled="false"                                                                                                                                                                                                                                          
						width="65%"                                                                                                                                                                                                                                              
						items="{                                                                                                                                                                                                                                                 
							path: '/results'                                                                                                                                                                                                                                        
						}"                                                                                                                                                                                                                                                       
						change="handleUoMToRemoveChange">                                                                                                                                                                                                                        
						<core:Item text="{AlternativeUnit}: {UnitOfMeasureLongname}" key="{AlternativeUnit}"/>                                                                                                                                                                   
					</ComboBox>                                                                                                                                                                                                                                               
				</items>                                                                                                                                                                                                                                                   
			</FlexBox>                                                                                                                                                                                                                                                  
			<FlexBox justifyContent="SpaceBetween">                                                                                                                                                                                                                     
				<Text text="{i18n>RemovalCostCenter}" class="customTextSmall"/>                                                                                                                                                                                            
			</FlexBox>                                                                                                                                                                                                                                                  
			<FlexBox class="sapUiLargeMarginBottom" justifyContent="SpaceBetween">                                                                                                                                                                                      
				<items>                                                                                                                                                                                                                                                    
					<Text text="{i18n>CostCenter}" class="customTextSmall"/>                                                                                                                                                                                                  
					<Text text="{selectedRow>/NavToHUItem/Kostl}" class="customTextSmall"/>                                                                                                                                                                                   
				</items>                                                                                                                                                                                                                                                   
			</FlexBox>                                                                                                                                                                                                                                                  
		</VBox>                                                                                                                                                                                                                                                      
		<VBox height="25%">                                                                                                                                                                                                                                          
		</VBox>                                                                                                                                                                                                                                                      
	</VBox>                                                                                                                                                                                                                                                       
</core:FragmentDefinition>                                                                                                                                                                                                                                     